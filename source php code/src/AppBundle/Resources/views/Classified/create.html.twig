{% extends 'base.html.twig' %}

{% block main %}
    {{ form_start(form) }}
    {{ form_widget(form._token) }}

    <div class="form-group">
        {{ form_errors(form) }}
    </div>

    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="from-group">
                {{ form_label(form.type) }}
                {{ form_widget(form.type, {'attr': {'class': 'selectpicker form-control'}}) }}
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                {{ form_label(form.gender) }}
                {{ form_widget(form.gender, {'attr': {'class': 'selectpicker form-control'}}) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.cities) }}
        {{ form_widget(form.cities, {'attr': {'class': 'selectpicker form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
    </div>

    <div class="form-group">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
    </div>

    <div class="form-group">
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone) }}
    </div>

    <div id="imagini" class="form-group">
        <h3>Adauga Imagini
            <a href="#" onclick="return adaugaImg()" class="btn btn-primary btn-xs">
                <i class="glyphicon glyphicon-plus"></i>
                adauga inca o imagine
            </a>
        </h3>

        <div class="form-group">
            <label>Imagine:</label>
            <input name="classified[images][]" type="file">
            <span class="badge removeImg">
                <i class="glyphicon glyphicon-minus"></i>
            </span>
        </div>
        <div class="form-group">
            <label>Imagine:</label>
            <input name="classified[images][]" type="file">
            <span class="badge removeImg">
                <i class="glyphicon glyphicon-minus"></i>
            </span>
        </div>
        <div class="form-group">
            <label>Imagine:</label>
            <input name="classified[images][]" type="file">
            <span class="badge removeImg">
                <i class="glyphicon glyphicon-minus"></i>
            </span>
        </div>
    </div>

    <div class="form-group">
        <div class="g-recaptcha" data-sitekey="6LdW4xkTAAAAAMthS6W8b2PrSVd4AEanuUq_CSVY"></div>
    </div>

    <br/>
    <div class="form-group">
        <input type="submit" value="{{ 'add.classified'|trans }}" name="submit" class="btn btn-success" />
    </div>

{% endblock %}

{% block javascript %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}
