                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li>
                                <a href="{{ path('dashboard') }}" title="{{ 'My classifieds'|trans }}">
                                    {{ 'My classifieds'|trans }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('dashboard.change_password') }}" title="{{ 'Change your password'|trans }}">
                                    {{ 'Change your password'|trans }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('logout') }}" title="{{ 'Logout'|trans }}">
                                    {{ 'Logout'|trans }}
                                </a>
                            </li>
                        {% else %}
                            <li><a href="{{ path('login') }}" title="{{ 'Login'|trans }}"><i class="glyphicon glyphicon-map-marker"></i> {{ 'Login'|trans }}</a></li>
                            <li><a href="{{ path('register') }}" title="{{ 'Register'|trans }}"><i class="glyphicon glyphicon-user"></i> {{ 'Register'|trans }}</a></li>
                        {% endif %}
                    </ul>
                </li>
            </ul>
        </div>
