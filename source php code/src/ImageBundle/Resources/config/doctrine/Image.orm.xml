<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\ImageBundle\Entity\Image"
            table="image"
            repository-class="App\ImageBundle\Entity\Repository\ImageRepository"
    >
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="file" column="file" type="string" nullable="false"/>
        <field name="thumb" column="thumb" type="string" nullable="true"/>
        <field name="cdnPath" type="string" nullable="true"/>
        <many-to-one target-entity="App\AppBundle\Entity\Classified" field="classified" inversed-by="images"/>
    </entity>
</doctrine-mapping>
