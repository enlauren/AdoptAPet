<div class="modal fade" id="feedback">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    {{ 'feedback.modal.title'|trans }}
                </h4>
            </div>
            <div class="modal-body">
                <p>
                    {{ 'feedback.modal.description'|trans }}
                </p>
                <form method="POST" id="feedbackForm">
                    <div class="form-group">
                        <label for="email">{{ 'feedback.modal.label.email'|trans }}</label>
                        <input type="text" name="feedback[user][email]" id="email" class="form-control required" placeholder="Email" value=""/>
                    </div>
                    <div class="form-group">
                        <label for="mesaj">{{ 'feedback.modal.label.name'|trans }}</label>
                        <textarea name="feedback[content]" id="mesaj" class="form-control required" placeholder="Mesaj" rows="6"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    {{ 'feedback.modal.close'|trans }}
                </button>
                <button type="button" class="btn btn-primary" onclick="trimiteFeedback()" id="trimiteFdbBtn">
                    {{ 'feedback.modal.send_feedback'|trans }}
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
