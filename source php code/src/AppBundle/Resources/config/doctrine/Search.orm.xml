<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\AppBundle\Entity\Search"
            table="search"
            repository-class="App\AppBundle\Entity\Repository\SearchRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="query" column="query" type="string" nullable="false"/>
        <field name="createdAt" column="created_at" type="datetime" nullable="false"/>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="false"/>
        <field name="valid" column="valid" type="boolean">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <field name="count" column="count" type="integer">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <unique-constraints>
            <unique-constraint name="queryx" columns="query"></unique-constraint>
        </unique-constraints>
    </entity>

</doctrine-mapping>
