<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="user_bundle.factory.user" class="App\UserBundle\Entity\Factory\UserFactory">
            <argument type="service" id="user_bundle.factory.password"/>
        </service>

        <service id="user_bundle.factory.password" class="App\UserBundle\Factory\PasswordFactory">
        </service>

        <service id="user_bundle.form.type.registration" class="App\UserBundle\Form\RegistrationType">
            <tag name="form.type"/>
        </service>

        <service id="user_bundle.repository.user" class="App\UserBundle\Entity\Repository\UserRepository">
            <factory method="getRepository" service="doctrine" />
            <argument>App\UserBundle\Entity\User</argument>
        </service>

        <service id="user_bundle.form.type.change_password" class="App\UserBundle\Form\ChangePasswordType">
            <argument type="service" id="security.password_encoder"/>
            <tag name="form.type" />
        </service>

    </services>
</container>
