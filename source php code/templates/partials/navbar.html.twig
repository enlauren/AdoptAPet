                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-search"></i>
                        <b class="caret"></b>
                    </a>
                    <div class="dropdown-menu" id="cauta">
                        <form action="{{ path("search") }}" class="form-inline" role="form">
                            <div class="input-group">
                                <input type="text" class="form-control" name="q" placeholder="{{ 'Search Placeholder'|trans }}">
                              <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">{{ 'Search'|trans }}</button>
                              </span>
                            </div><!-- /input-group -->
                        </form>
                    </div>
                </li>
