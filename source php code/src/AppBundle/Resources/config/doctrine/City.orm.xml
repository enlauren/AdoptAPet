<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\AppBundle\Entity\City" table="city" repository-class="App\AppBundle\Entity\Repository\CityRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" column="name" type="string" nullable="false"/>
        <field name="slug" column="slug" type="string" nullable="false"/>

        <one-to-many target-entity="App\AppBundle\Entity\Cabinet" mapped-by="city" field="cabinete"/>

        <many-to-many target-entity="App\AppBundle\Entity\Classified" field="classifieds" mapped-by="cities">
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-many>

    </entity>

</doctrine-mapping>
