<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\AppBundle\Entity\Message"
            table="message"
            repository-class="App\AppBundle\Entity\Repository\MessageRepository"
    >

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="content" column="content" type="text" nullable="false"/>

        <many-to-one target-entity="App\UserBundle\Entity\User" field="author" inversed-by="messages"/>

        <many-to-one target-entity="App\AppBundle\Entity\Classified" field="classified" inversed-by="messages">
            <join-column name="classified_id" referenced-column-name="id"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
