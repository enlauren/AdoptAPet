<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\AppBundle\Entity\Cabinet"
            table="cabinet"
            repository-class="App\AppBundle\Entity\Repository\CabineteRepository"
    >

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="title" column="title" type="string" nullable="false"/>
        <field name="slug" column="slug" type="string" nullable="false"/>
        <field name="description" column="description" type="text" nullable="false"/>
        <field name="address" column="address" type="text" nullable="true"/>
        <field name="schedule" column="schedule" type="text" nullable="true"/>
        <field name="website" column="website" type="string" nullable="true"/>
        <field name="phone" column="phone" type="string" nullable="true"/>
        <field name="email" column="email" type="string" nullable="true"/>
        <field name="nonstop" column="non_stop" type="boolean" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <field name="flag" column="flag" type="integer" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <many-to-one target-entity="App\UserBundle\Entity\User" field="user" inversed-by="cabinete"/>
        <many-to-one target-entity="App\AppBundle\Entity\City" field="city" inversed-by="cabinete"/>

        <one-to-many target-entity="App\AppBundle\Entity\Review" mapped-by="cabinet" field="reviews"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="updatedTimestamps"/>
            <lifecycle-callback type="preUpdate" method="updatedTimestamps"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
